							"pm.environment.set('first_name', jsonData.data.first_name);\r",
							"\r",
							"//Test print data\r",
							"pm.test(\"print_data\", function(){\r",
							"    console.log(jsonData.data.first_name)\r",
							"});\r",
							"\r",
							"pm.test(\"Status code is 200\", function(){\r",
							"    pm.response.to.have.status(200)\r",
							"});\r",
							"\r",
							"pm.test(\"ValidateEmail\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.data.email).to.eql(\"emma.wong@reqres.in\");\r",
							"});\r",
							"\r",
							"pm.test(\"ValidateFirstName\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.data.first_name).to.eql(\"Emma\");\r",
							"});\r",
							"pm.test(\"Validate Last Name\", function(){\r",
							"    pm.expect(jsonData.data.last_name).to.eql(\"Wong\")\r",
							"});"
